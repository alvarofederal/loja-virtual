<%- include('partials/header') %>

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <i class="fas fa-bug text-danger" style="font-size: 6rem;"></i>
            <h1 class="mt-4">Erro Interno</h1>
            <h3 class="text-muted">Algo deu errado</h3>
            <p class="text-muted mb-4">
                Ocorreu um erro inesperado. Por favor, tente novamente mais tarde.
            </p>
            
            <% if (error && error.stack) { %>
                <div class="alert alert-danger text-start">
                    <h6>Detalhes do erro:</h6>
                    <pre class="mb-0"><%= error.stack %></pre>
                </div>
            <% } %>
            
            <div class="d-grid gap-2 d-md-block">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home"></i> Voltar ao In√≠cio
                </a>
                <a href="/products" class="btn btn-outline-primary">
                    <i class="fas fa-shopping-bag"></i> Ver Produtos
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 