<%- include('../partials/header') %>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Produtos</h1>
        <% if (user && user.role === 'admin') { %>
            <a href="/products/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> Adicionar Produto
            </a>
        <% } %>
    </div>

    <% if (products.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-box-open text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">Nenhum produto encontrado</h3>
            <p class="text-muted">Não há produtos disponíveis no momento.</p>
        </div>
    <% } else { %>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <% if (product.image) { %>
                            <img src="/products/<%= product.id %>/image" class="card-img-top product-image" alt="<%= product.name %>"
                                 onerror="this.src='https://via.placeholder.com/300x200?text=Produto'">
                        <% } else { %>
                            <img src="https://via.placeholder.com/300x200?text=Produto" class="card-img-top product-image" alt="<%= product.name %>">
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text text-muted"><%= product.description %></p>
                            <div class="mt-auto">
                                <p class="card-text">
                                    <strong class="text-primary">R$ <%= parseFloat(product.price).toFixed(2) %></strong>
                                </p>
                                <div class="d-grid gap-2">
                                    <a href="/products/<%= product.id %>" class="btn btn-outline-primary">Ver Detalhes</a>
                                    <form action="/cart/add/<%= product.id %>" method="POST" class="d-inline">
                                        <div class="input-group mb-2">
                                            <input type="number" name="quantity" value="1" min="1" class="form-control" style="max-width: 80px;">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                
                                <% if (user && user.role === 'admin') { %>
                                    <div class="mt-2">
                                        <a href="/products/<%= product.id %>/edit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('Tem certeza que deseja excluir este produto?')">
                                                <i class="fas fa-trash"></i> Excluir
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %> 