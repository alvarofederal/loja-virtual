<%- include('../partials/header') %>

<div class="container">
    <h1 class="mb-4">
        <i class="fas fa-receipt"></i> Pedidos
    </h1>

         <% if (!orders || orders.length === 0) { %>
         <div class="text-center py-5">
             <i class="fas fa-receipt text-muted" style="font-size: 4rem;"></i>
             <h3 class="mt-3 text-muted">Nenhum pedido encontrado</h3>
             <% if (user && user.role === 'admin') { %>
                 <p class="text-muted">Ainda não há pedidos no sistema.</p>
             <% } else { %>
                 <p class="text-muted">Você ainda não fez nenhum pedido.</p>
                 <a href="/products" class="btn btn-primary">
                     <i class="fas fa-shopping-bag"></i> Ver Produtos
                 </a>
             <% } %>
         </div>
    <% } else { %>
        <div class="row">
            <% orders.forEach(order => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Pedido <%= order.order_number %></h5>
                                <span class="badge badge-<%= order.status === 'pending' ? 'warning' : 
                                                       order.status === 'processing' ? 'info' : 
                                                       order.status === 'shipped' ? 'primary' : 
                                                       order.status === 'delivered' ? 'success' : 
                                                       order.status === 'cancelled' ? 'danger' : 'secondary' %>">
                                    <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Cliente:</strong> <%= order.customer_name %></p>
                                    <p><strong>Email:</strong> <%= order.customer_email %></p>
                                    <p><strong>Data:</strong> <%= new Date(order.created_at).toLocaleDateString('pt-BR') %></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Itens:</strong> <%= order.items ? order.items.length : 0 %></p>
                                    <p><strong>Total:</strong> R$ <%= (order.total_amount ? parseFloat(order.total_amount).toFixed(2) : '0.00') %></p>
                                    <p><strong>Endereço:</strong> <%= order.shipping_city %>, <%= order.shipping_state %></p>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <a href="/orders/<%= order.id %>" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Ver Detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
